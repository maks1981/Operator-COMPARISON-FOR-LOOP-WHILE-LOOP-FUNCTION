// ANOTHER WORKOUT
var os = 'Windows';
var type = 'dddfdfd';
var value = 1500;

if(os === 'Mac'){
    console.log('Incredible Mac');
} else {
    console.log('Super Windows')
}

if(type === 'Decktop'){
    console.log("It\'s a Desctop");
} else if(type === 'All in One') {
    console.log('It is All in One')
} else if(type === 'Laptop'){
    console.log('It is a Laptop')
} else{
    console.log('It is computer')
}

switch (value) {
    case 100:
        console.log('The price is amazing $'+ value +', awesome discount')
        break;
    case 300:
        console.log('The price is high $'+ value +',last week was $100')
        break;
    case 200:
        console.log('We can buy it for $200')
        break;
    default:
        console.log('The price is $'+ value )
        break;
}


ANOTHER WORKOUT
var user = ['Raymond', 'George'];
var price = [20,12,5];
var products = ['Potatoes', 'Apples', 'Lemmons'];

for(var i = 0; i < user.length; i++){
    if (user[i] === 'Raymond') {
        console.log(user[i] + ' bought:');
        for (var x = 0; x < products.length; x++) {
            console.log('.' + products[x] + ' = $' + (price[x] -3));
        }
    } else {
        console.log(user[i] + ' bought:');
        for (var x = 0; x < products.length; x++) {
            console.log('.' + products[x] + ' = $' + price[x]);
        }
    }
}


var player = ['Bobby', 'Tommy'];
var cost = [14, 25, 92];
var items = ['Laptop', 'PS', 'Desctop'];

for (var i = 0; i <= player.length; i++){
    if(player[i] === 'Bobby'){
        console.log(player[i] + ' got:');
        for(var x = 0; x <= player.length; x++){
            console.log('.' + items[x] + ' = $' + (cost[x] - 5));
        }
    } else {
        console.log(player[i] + ' got:');
        for(var x = 0; x <= player.length; x++){
            console.log('.' + items[x] + ' = $' + (cost[x] ));
    }
  }
}

ANOTHER WORKOUT

var servers = [true,true,true,true,false];

function message(number){
    console.log('Server ' + number + '.Running...')
}
function restart(number){
    servers[number] = true;
    message(number)
}

for(var i = 0; i < servers.length; i++){

    if(servers[i]){
        message(i);
    } else{
        console.log('Server' + i + ', down.Restarting...')
        restart(i);
    }

}



