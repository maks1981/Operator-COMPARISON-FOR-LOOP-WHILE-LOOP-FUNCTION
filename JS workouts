== ADITION ==//
var previous = 200;
var current = 100;
var total = ' The total is: ' + (previous + current);
current += previous;


var username = 'James';
var message = 'Welcome back ' + username;

console.log(message);

// == SUBSTRACTION == //

var total = 'total amout is: ' + ( previous - current );
var message = 'Welcome back' - username;

console.log(message);

// COMPARISON 

