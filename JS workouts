var y = 10;

var result = x == y ? 'Equal' : 'Not equal';
console.log(result);

FOR LOOP

var x = 0;

for(x; x <= 5; x++){
    console.log('This is iteration number ' + x)
}

for(var x = 0; x <= 5; x++){
    for(var j = 0; j <= 5; j++){
        console.log('First loop: ' + x + ' - IL:' + j)
    }
}

for(var i = 1; i <= 5; i++){
    if(i == 2){
        continue;
    }
    console.log(i);
}

var user = ['james', 'Brain', 'Tomas']

for(var i = 0; i < user.length; i++){
    console.log(user[i]);
}

WHILE LOOP

var x = 2;
while(x <= 5){
    console.log(x);

    x++;
}

FUNCTION

function cals(a,b){
    var sum = a + b;
    return sum;
}

var other = cals(5,5);
var result = cals('Hello ', 'Wolrd');


console.log(result);
console.log(other);

